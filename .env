# client/.env.example - Frontend environment variables for BigCoin Piano

# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000
VITE_APP_URL=http://localhost:3000

# Application Settings
VITE_APP_NAME="BigCoin Piano"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Mine cryptocurrency by playing piano"

# Environment
VITE_NODE_ENV=development
VITE_DEBUG=true

# Stripe Configuration (Public Keys Only)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# Audio Settings
VITE_AUDIO_ENABLED=true
VITE_DEFAULT_VOLUME=70
VITE_AUDIO_FORMAT=mp3

# Game Configuration
VITE_PIANO_KEYS=17
VITE_MAX_COMBO=999
VITE_SCORE_MULTIPLIER=1.0
VITE_COIN_CONVERSION_RATE=0.001

# Performance Settings
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=300000

# Analytics & Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_HOTJAR_ID=

# Feature Flags
VITE_ENABLE_MULTIPLAYER=true
VITE_ENABLE_VOICE_CHAT=false
VITE_ENABLE_VIDEO_RECORDING=false
VITE_ENABLE_SOCIAL_SHARING=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_OFFLINE_MODE=true

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,vi
VITE_ENABLE_RTL=false

# CDN & Assets
VITE_CDN_URL=
VITE_MUSIC_CDN_URL=
VITE_AVATAR_CDN_URL=

# Social Login (if implementing)
VITE_GOOGLE_CLIENT_ID=
VITE_FACEBOOK_APP_ID=
VITE_TWITTER_API_KEY=

# Map Integration (for location features)
VITE_GOOGLE_MAPS_API_KEY=

# WebRTC (for multiplayer features)
VITE_WEBRTC_CONFIG={"iceServers":[{"urls":"stun:stun.l.google.com:19302"}]}

# Security
VITE_RECAPTCHA_SITE_KEY=
VITE_CSP_NONCE=

# Development Tools
VITE_SHOW_DEV_TOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Performance Monitoring
VITE_ENABLE_WEB_VITALS=true
VITE_PERFORMANCE_BUDGET={"javascript":250,"css":50,"images":200}

# Experimental Features
VITE_ENABLE_WEB_ASSEMBLY=false
VITE_ENABLE_SHARED_ARRAY_BUFFER=false
VITE_ENABLE_OFFSCREEN_CANVAS=false